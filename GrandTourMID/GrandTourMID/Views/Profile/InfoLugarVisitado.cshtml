
@{
    ViewBag.Title = "InfoLugarVisitado";
    Layout = "~/Views/Shared/MasterProfile.cshtml";

}



<div class="container">
    <h3 class="w3-theme-d5">&nbsp; Nombre del lugar</h3>
    <div class="w3-row">
        <div class="w3-half">
            <div class="w3-row-padding">
                <br />
                <center>
                    <img draggable="true" src="~/img/rosada.jpg" id="imagen9" style="width:450px; height:250px" class="w3-round w3-animate-zoom"><br />
                </center>
            </div>
        </div>

        <div class="w3-half">
            <br />
            <input id="txtId" name="txtId" class="w3-input w3-border-blue" type="hidden" value="IDDELLUGAR" required>
            <img src="~/img/Sin título.png" style="width:446px" />
        </div>
    </div>
    <div class="row">
        <p><label>Aqui ira la informacion de la web del lugar</label></p>
    </div>

    <form>
        <h2>Mis fotos de "NOMBRE DEL LUGAR"</h2>
        <div class="w3-container w3-white w3-opacity-off">
            <div class="w3-white">
                <h6 class="w3-text-green"><label class="w3-text-green">@ViewBag.Mensaje</label> </h6>
            </div>
        </div>
        <div class="w3-row-padding w3-margin-top">
        @*DISEÑO DE CADA IMAGEN*@
            <center>
                <div class="w3-third">

                    <img src="~/img/rosada.jpg" style="width:200px;cursor:zoom-in"
                         onclick="document.getElementById(IDDELLAFOTO).style.display='block'">
                    <div id="IDDELAFOTO" class="w3-modal w3-black" onclick="this.style.display='none'">
                        <span class="w3-button w3-hover-red w3-xlarge w3-display-topright">&times;</span>
                        <div class="w3-modal-content w3-animate-zoom">
                            <img src="~/img/rosada.jpg" style="width:100%">
                        </div>
                    </div>
                </div>
            </center>
        </div><br />



    </form>

</div>

