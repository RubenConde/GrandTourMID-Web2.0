
@{
    ViewBag.Title = "Myprofile";
    Layout = "~/Views/Shared/MasterAdmi.cshtml";
}



<div class="row gap-20 masonry pos-r" style="position: relative; height: 1110.6px;">
    <div class="masonry-sizer col-md-6"></div>
    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 0px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Foto de perfil</h6>
            <div class="mT-30">
                <form>
                    <center><img class="img-rounded" src="~/img/usuario.png" style="width:300px" /></center>
                </form>
            </div>
        </div>
    </div>

    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 801.666px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Mis datos</h6>
            <div class="mT-30">
                <form class="container" id="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3"><label for="validationCustom01">Nombre</label><input class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required="" type="text"></div>
                        <div class="col-md-6 mb-3"><label for="validationCustom02">Usuario</label><input class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required="" type="text"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3"><label for="validationCustom01">Apellido Paterno</label><input class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required="" type="text"></div>
                        <div class="col-md-6 mb-3"><label for="validationCustom02">Apellido Materno</label><input class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required="" type="text"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3"><label for="validationCustom01">Correo electronico</label><input class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required="" type="text"></div>
                        <div class="form-group col-md-5">
                            <label for="validationCustom01">Ciudad</label>
                            <select required="" id="id=" validationCustom01" class="form-control">
                                <option selected="selected">Ciudad...</option>
                                <option>...</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit form</button>

                </form>
                <br />
                <script>!function () { "use strict"; window.addEventListener("load", function () { var t = document.getElementById("needs-validation"); t.addEventListener("submit", function (e) { !1 === t.checkValidity() && (e.preventDefault(), e.stopPropagation()), t.classList.add("was-validated") }, !1) }, !1) }()</script>
            </div>
        </div>
    </div>
    
    <div class="masonry-item col-md-12" style="position: absolute; left: 49.9994%; top: 506.4px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Contraseña</h6>
            <div class="mT-30">
                <form>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Contraseña actual</label>
                        <div class="col-sm-10"><input class="form-control" id="inputEmail3" placeholder="Email" type="password"></div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Contraseña nueva</label>
                        <div class="col-sm-10"><input class="form-control" id="inputEmail3" placeholder="Email" type="email"></div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Confirmar contraseña</label>
                        <div class="col-sm-10"><input class="form-control" id="inputEmail3" placeholder="Email" type="email"></div>
                    </div>

                    <button class="btn btn-primary" type="submit">Submit form</button>

                </form>
            </div>
        </div>
    </div>


</div>



