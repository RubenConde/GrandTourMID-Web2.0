
@{
    ViewBag.Title = "Maps";
    Layout = "~/Views/Shared/MasterAdmi.cshtml";
}



<div class="container-fluid">
    <h4 class="c-grey-900 mT-10 mB-30">Google Maps</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <input id="txtubi" class="form-control" placeholder="Buscar..." type="text" /><br />
                <div id="map" style="padding-bottom: 75%; position: relative; overflow: hidden;">

                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {

        $('#map').locationpicker({
            radius: 0,
            location: {
                latitude: 20.9681469,
                longitude: -89.62987240000001
            },
            inputBinding: {
                latitudeInput: $('#latitud'),
                longitudeInput: $('#longitud'),
                locationNameInput: $('#txtubi')
                

            },
            enableAutocomplete: true

        });
    })
</script>



