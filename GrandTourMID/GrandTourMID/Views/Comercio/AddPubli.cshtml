
@{
    ViewBag.Title = "AddPubli";
    Layout = "~/Views/Shared/MasterComercio.cshtml";
}

<head>
    <title>Agregar Publicidad</title>
</head>


<form ondragstart="return false" id="frmagregarlugar" class="row gap-20 masonry pos-r" enctype="multipart/form-data" style="position: relative; height: 1110.6px;">
    <div class="masonry-sizer col-md-6"></div>
    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 0px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Foto del lugar</h6>
            <div class="mT-30">
                <div style="height:463.233px">
                    <center><img class="rounded mx-auto d-block" id="imglugar" src="~/img/addimagen.png" style="width:450px; height:400px;" /></center>
                    <br />
                    <center><label class="btn-outline-secondary rounded" id="uploadimagenlugar" style="width:133px;cursor:pointer;">Seleccionar imagen<input name="file" type="file" accept="image/*" style="display:none" onchange="loadimagenlugar(event)" /></label></center>

                </div>
            </div>
        </div>
    </div>

    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 801.666px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Datos</h6>
            <div class="mT-30">
                <div class="container" novalidate="">
                    <div class="row">
                        <div class="col-md-12 mb-3"><label for="validationCustom01">Nombre de la publicidad</label><input class="form-control" id="namelugar" name="namelugar" placeholder="Ingrese nombre de la publicidad" type="text"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3"><label for="validationCustom05">Código de Barras</label><textarea style="resize:none" class="form-control" id="infolugarweb" name="infolugarweb" placeholder="Generar código de barras" type="text"></textarea></div>
                    </div>
                    <center>
                        <a class="btn btn-info align-center" style="cursor:pointer">Generar código</a>
                    </center>
                </div>
            </div>
        </div>
    </div>
    <br>
    </div>
</form>

<script src="~/Scripts/admin_jquery_dist_jquery.min.js"></script>
<script>
    $(document).ready(function () {

        $('#maplugar').locationpicker({
            radius: 0,
            location: {
                latitude: 20.9681469,
                longitude: -89.62987240000001
            },
            inputBinding: {
                latitudeInput: $('#lalugar'),
                longitudeInput: $('#lonlugar'),
                locationNameInput: $('#txtubicalugar')


            },
            enableAutocomplete: true

        });
    })
</script>

