
@{
    ViewBag.Title = "AddPubli";
    Layout = "~/Views/Shared/MasterComercio.cshtml";
}

<head>
    <title>Agregar Sucursal</title>
</head>


<form ondragstart="return false" id="frmagregarpubli" class="row gap-20 masonry pos-r" enctype="multipart/form-data" style="position: relative; height: 1110.6px;">
    <div class="masonry-sizer col-md-6"></div>
    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 0px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Foto del lugar</h6>
            <div style="height:415px">
                <center><img class="rounded mx-auto d-block" id="imgpubli" name="imgpubli" src="~/img/addimagen.png" style="width:350px; height:350px;" /></center>
                <center><label class="btn-outline-secondary rounded" id="uploadimagenpubli" style="width:133px;cursor:pointer;">Seleccionar imagen<input name="file" type="file" accept="image/*" style="display:none" onchange="loadimagenpubli(event)" /></label></center>

            </div>
        </div>
    </div>

    <div class="masonry-item col-md-6" style="position: absolute; left: 0%; top: 801.666px;">
        <div class="bgc-white p-20 bd">
            <h6 class="c-grey-900">Datos</h6>
            <div class="bg-danger text-white ">
                <h5>¡Atención!</h5>
                <p>Al momento de agregar un nuevo cupón no podrá modificarlo después.</p>
            </div>
            <div class="mT-30">
                <div class="container" novalidate="">
                    <div class="row">
                        <div class="col-md-12 mb-3"><label for="validationCustom01">Nombre de la publicidad</label><input class="form-control" id="namepubli" name="namepubli" placeholder="Ingrese el nombre de la publicidad" type="text"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3"><label for="validationCustom05">Número máximo de canjeos</label><input style="resize:none" class="form-control" id="maxcanjeo" name="maxcanjeo" placeholder="Introducir el número máximo de canjeos" type="text" onkeypress="return soloNumeros(event);"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3"><label for="validationCustom06">Descripción del cupón</label><textarea style="resize:none" class="form-control" id="descrip" name="descrip" placeholder="Introducir la descripción del cupón" type="text"></textarea></div>
                    </div>
                    <div class="timepicker-input input-icon form-group">
                        <label for="validationCustom09">Fecha de vencimiento</label>
                        <div class="input-group">
                            <div class="input-group-addon bgc-white bd bdwR-0"><i class="ti-calendar"></i></div>
                            <input class="form-control bdc-grey-200 start-date" id="fechacupon" name="fechacupon" placeholder="Fecha" data-provide="datepicker" type="date">
                        </div>
                    </div>
                    <button style="cursor:pointer" class="btn btn-primary" id="btnaddpubli" type="submit"><li class="fa fa-plus"></li> Agregar cupón</button><br />
                </div>
            </div>
        </div>
    </div>


</form>

<script src="~/Scripts/admin_jquery_dist_jquery.min.js"></script>
